@model ProductDetailsModel

<div class="container">
    <div class="row">
        <div class="single_top">
            <div class="single_grid">
                <div class="grid images_3_of_2">
                    <img class="img-responsive chain" src="~/img/@Model.Product.ImageUrl" />
                    <div class="clearfix"> </div>
                </div>
                <div class="desc1 span_3_of_2">
                    <h4>@Model.Product.Name</h4>
                    <hr />
                    @foreach (var category in Model.Categories)
                    {
                        <a href="#" class="btn btn-link p-0 mb-3">@category.Name</a>
                    }
                    <div class="cart-b">
                        <div class="left-n ">$@Model.Product.Price</div>
                        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="form-inline">
                            <input type="hidden" name="productId" value="@Model.Product.Id" />
                            <div class="input-group mb-3">
                                <input type="number" name="quantity" class="form-control" value="1" min="1" step="1" style="width:100px" />
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="glyphicon-shopping-cart"></i>Add To Cart
                                    </button>
                                </div>
                            </div>
                        </form>
                        <div class="clearfix"></div>
                    </div>
                    <h6>100 items in stock</h6>
                    <p>@Html.Raw(Model.Product.Description)</p>
                    <div class="share">
                        <h5>Share Product :</h5>
                        <ul class="share_nav">
                            <li><a href="#"><img src="~/img/facebook.png" title="facebook"></a></li>
                            <li><a href="#"><img src="~/img/twitter.png" title="Twiiter"></a></li>
                            <li><a href="#"><img src="~/img/rss.png" title="Rss"></a></li>
                            <li><a href="#"><img src="~/img/gpluse.png" title="Google+"></a></li>
                        </ul>
                    </div>
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="toogle">
                <h3 class="m_3">Product Details</h3>
                <p class="m_text">@Html.Raw(Model.Product.Description)</p>
            </div>
        </div>
    </div>

</div>