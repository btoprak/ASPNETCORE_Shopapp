<div class="header">
    <div class="top-header">
        <div class="container">
            <div class="top-header-left">
                <ul class="support">
                    <li><a href="#"><label> </label></a></li>
                    <li><a href="#">24x7 live<span class="live"> support</span></a></li>
                </ul>
                <ul class="support">
                    <li class="van"><a href="#"><label> </label></a></li>
                    <li><a href="#">Free shipping <span class="live">on order over 500</span></a></li>
                </ul>
                <div class="clearfix"> </div>
            </div>
            <div class="top-header-right">
                <div class="down-top">
                    <select class="in-drop">
                        <option value="English" class="in-of">English</option>
                        <option value="Japanese" class="in-of">Japanese</option>
                        <option value="French" class="in-of">French</option>
                        <option value="German" class="in-of">German</option>
                    </select>
                </div>
                <div class="down-top top-down">
                    <select class="in-drop">

                        <option value="Dollar" class="in-of">Dollar</option>
                        <option value="Yen" class="in-of">Yen</option>
                        <option value="Euro" class="in-of">Euro</option>
                    </select>
                </div>
                <!---->
                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <div class="bottom-header">
        <div class="container">
            <div class="header-bottom-left">
                <div class="logo">
                    <a asp-controller="Home" asp-action="Index"><img src="~/img/logo.png" alt=" " /></a>
                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("admin"))
                    {
                        <ul class="login" style="width: 42%; text-align:center; padding-top:20px; font-size:15px">
                            <li><a asp-controller="Admin" asp-action="ProductList"><span> </span>Product List</a></li> | 
                            <li><a asp-controller="Admin" asp-action="CategoryList">Category List</a></li>
                        </ul>
                    }
                }
                @if (!User.IsInRole("admin"))
                {
                    <form asp-controller="Shop" asp-action="SearchProduct">
                    <div class="search">
                        <input type="text" name="searchString" value="" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '';}">
                        <input type="submit" value="SEARCH">
                    </div>
                        </form>
                    <div class="clearfix"> </div>
                }

            </div>

            <div class="header-bottom-right" style="display:inline-flex">

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="order"><a asp-controller="Cart" asp-action="GetOrders"><span> </span>ORDERS</a></div>
                    <div class="cart"><a asp-controller="Cart" asp-action="Index"><span> </span>CART</a></div>
                    <div class="account"><a asp-controller="Account" asp-action="Manage"><span> </span>@User.Identity.Name</a></div>
                    <div class="account"><a asp-controller="Account" asp-action="Logout"><span> </span>LOGOUT</a></div>
                }
                else
                {

                    <ul class="login" style="width: 100%; text-align: right;">
                        <li><a asp-controller="Account" asp-action="Login"><span> </span>LOGIN</a></li> |
                        <li><a asp-controller="Account" asp-action="Register">SIGNUP</a></li>
                    </ul>

                    <div class="clearfix"> </div>
                }

            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>